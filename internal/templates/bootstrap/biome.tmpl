{
    "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4,
            "lineWidth": 100,
            "trailingCommas": "none"
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "warn",
                "noUnusedFunctionParameters": "warn",
                "noUnusedPrivateClassMembers": "warn",
                "useExhaustiveDependencies": "warn",
                "useHookAtTopLevel": "error",
                "useImportExtensions": "error"
            },
            "suspicious": {
                "noEmptyInterface": "warn",
                "noExplicitAny": "warn",
                "noArrayIndexKey": "off"
            },
            "style": {
                "noNamespace": "off",
                "noNonNullAssertion": "off",
                "useFragmentSyntax": "warn",
                "useImportType": "error",
                "useNodejsImportProtocol": "error",
                "useConst": "off",
                "noEnum": "error"
            }
        }
    },
    "assist": {
        "actions": {
            "source": {
                "useSortedAttributes": "on",
                "organizeImports": "on"
            }
        }
    },
    "overrides": [
        {
            "includes": ["**/.vscode/**"],
            "json": {
                "parser": {
                    "allowComments": true,
                    "allowTrailingCommas": true
                }
            }
        },
        {
            "includes": ["**/dist/**", "**/node_modules/**"],
            "linter": {
                "enabled": false
            },
            "assist": {
                "enabled": false
            }
        }
    ]
}
