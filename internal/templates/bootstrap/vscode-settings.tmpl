{
{{- if eq .Kind "website" }}
    "typescript.preferences.importModuleSpecifierEnding": "js",

    "biome.enabled": true,
    "prettier.enable": true,

    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.biome": "explicit",
        "source.addMissingImports.ts": "explicit",
        "source.removeUnused.ts": "never"
    },

    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,

    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[css]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[json]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[yaml]": {
        "editor.defaultFormatter": "prettier.prettier-vscode"
    },
    "[toml]": {
        "editor.defaultFormatter": "prettier.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "prettier.prettier-vscode"
    },

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "package.json": ".github*, .npmrc, .prettierignore, .vscode*, biome.json*, bun.lock*, components.json, eslint.config.*, mise.toml, pnpm-*.yaml, prettier.config.*, tsconfig.*, wrangler.toml, wrangler.*.toml, wrangler.json*, wrangler.*.json, wrangler.*.jsonc, workspace.json",
        "readme*": "agent*, authors, backers*, changelog*, citation*, claude*, code_of_conduct*, codeowners, contributing*, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*"
    },

    "eslint.enable": false,
    "deno.enable": false
{{- end }}

{{- if eq .Kind "tui" }}
    "go.useLanguageServer": true,
    "go.lintTool": "golangci-lint",
    "go.lintOnSave": "package",

    "gopls": {
        "ui.semanticTokens": true
    },

    "editor.formatOnSave": true,
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "go.mod": "go.sum, mise.toml",
        "readme*": "agent*, authors, backers*, changelog*, citation*, claude*, code_of_conduct*, codeowners, contributing*, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*"
    }
{{- end }}

{{- if eq .Kind "ios" }}
    "swift.path": "/usr/bin/swift",

    "editor.formatOnSave": true,
    "[swift]": {
        "editor.defaultFormatter": "vknabel.vscode-apple-swift-format"
    },

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "Package.swift": "Package.resolved, mise.toml",
        "readme*": "agent*, authors, backers*, changelog*, citation*, claude*, code_of_conduct*, codeowners, contributing*, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*"
    }
{{- end }}
}
